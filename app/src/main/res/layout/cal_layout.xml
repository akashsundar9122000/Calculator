<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Purple"
            android:text="C"
            android:id="@+id/clr"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="0"
            android:layout_row="0"
            android:textColor="@color/black"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Red"
            android:text="()"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="1"
            android:layout_row="0"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_column="2"
            style="@style/Button_Red"
            
            android:text="D"
            android:textColor="@color/black"
            android:textSize="35sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="0"
            android:id="@+id/divide"
            android:layout_columnWeight="1"
            android:layout_column="3"
            style="@style/Button_Blue"
            android:text="/"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Red"
            android:text="7"
            android:id="@+id/seven"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="0"
            android:layout_row="1"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Red"
            android:text="8"
            android:id="@+id/eight"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="1"
            android:layout_row="1"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Red"
            android:text="9"
            android:id="@+id/nine"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="2"
            android:layout_row="1"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Blue"
            android:text="X"
            android:id="@+id/mul"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="3"
            android:layout_row="1"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Red"
            android:text="4"
            android:id="@+id/four"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="0"
            android:layout_row="2"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Red"
            android:text="5"
            android:id="@+id/five"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="1"
            android:layout_row="2"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Red"
            android:text="6"
            android:id="@+id/six"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="2"
            android:layout_row="2"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Blue"
            android:text="-"
            android:id="@+id/minus"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="3"
            android:layout_row="2"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Red"
            android:text="1"
            android:id="@+id/one"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="0"
            android:layout_row="3"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Red"
            android:text="2"
            android:id="@+id/two"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="1"
            android:layout_row="3"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Red"
            android:text="3"
            android:id="@+id/three"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="2"
            android:layout_row="3"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            style="@style/Button_Blue"
            android:text="+"
            android:id="@+id/add"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="3"
            android:layout_row="3"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/zero"
            style="@style/Button_Red"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <Button
            android:id="@+id/mod"
            style="@style/Button_Blue"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="35sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="."
            android:id="@+id/decimal"
            style="@style/Button_Red"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="2"
            android:layout_row="4"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="="
            android:id="@+id/equal"
            style="@style/Button_Green"
            android:layout_columnWeight="1"
            android:textSize="35sp"
            android:layout_column="3"
            android:layout_row="4"
            android:textColor="@color/black"
            />





    </GridLayout>

</RelativeLayout>